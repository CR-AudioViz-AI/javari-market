{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "github": {
    "autoAlias": false
  },
  "crons": [
    {
      "path": "/api/cron/daily-battle",
      "schedule": "30 13 * * 1-5"
    },
    {
      "path": "/api/cron/update-results",
      "schedule": "15 20 * * 1-5"
    },
    {
      "path": "/api/cron/weekly-calibration",
      "schedule": "0 1 * * 0"
    }
  ]
}
